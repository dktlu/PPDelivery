<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:orientation="horizontal"
        android:layout_height="@dimen/x142">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/login_gray_45"
                android:textSize="@dimen/x28"
                android:text="@string/complete_order_evaluate"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x20"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="12:30"
                    android:textSize="@dimen/x24"
                    android:textColor="@color/pricing_rules_9c"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="订单号 15646461613171"
                    android:textSize="@dimen/x24"
                    android:layout_marginLeft="@dimen/x20"
                    android:textColor="@color/pricing_rules_9c"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="+2"
            android:textSize="@dimen/x36"
            android:textColor="@color/color_f85800"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/my_divider"
        android:visibility="gone"
        android:id="@+id/item_long"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/my_divider"
        android:id="@+id/item_short"
        android:layout_marginLeft="@dimen/x30"
        android:layout_height="@dimen/x1"/>
</LinearLayout>
