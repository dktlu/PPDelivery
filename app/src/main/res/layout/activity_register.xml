<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        layout="@layout/layout_titlebar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/my_divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x70"
            android:layout_marginRight="@dimen/x70"
            android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x140"
        android:layout_height="wrap_content">

    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/x76"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_registration"
                    android:layout_width="wrap_content"
                    android:button="@null"
                    android:background="@drawable/selector_registration"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_registration"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/x28"
                    android:textColor="@color/login_gray_45"
                    android:text="@string/label_registration_agreement"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x55"
        android:padding="@dimen/x30"
        android:gravity="center"
        android:background="@drawable/btn_login_gray_blue"
        android:textColor="@color/white"
        android:textSize="@dimen/x30"
        android:text="@string/registration"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
