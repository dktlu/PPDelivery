<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        layout="@layout/layout_titlebar"/>

    <View
        style="@style/divider_height_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <include
            android:layout_marginTop="@dimen/x104"
            android:layout_marginBottom="@dimen/x76"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/layout_tips_with_pic"/>

    </LinearLayout>

    <TextView
        style="@style/ww_color_white_size_30"
        android:layout_height="@dimen/x88"
        android:background="@drawable/shape_blue_solid"
        android:gravity="center"
        android:text="@string/back"
        android:id="@+id/tv_back"
        android:layout_margin="@dimen/x30"
        android:layout_width="match_parent"/>

</LinearLayout>
