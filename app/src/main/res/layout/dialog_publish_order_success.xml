<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:paddingLeft="@dimen/x30"
              android:paddingRight="@dimen/x30"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x40"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/x28"
            android:text="@string/publicsh_order_success"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_gray_close"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x52"
        android:layout_height="@dimen/x180"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x40"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/x28"
            android:text="你已成功支付"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color_f85800"
            android:textSize="@dimen/x28"
            android:text="¥11.00"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/gray_333"
        android:textSize="@dimen/x28"
        android:text="订单编号：45546545"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x30"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x50"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/x14"
            android:text="@string/again_one_order"
            android:textSize="@dimen/x28"
            android:textColor="@color/login_blue_1A"
            android:gravity="center"
            android:background="@drawable/shape_white_solid_blue_stroke"
            android:layout_height="@dimen/x80"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x14"
            android:textSize="@dimen/x28"
            android:textColor="@color/white"
            android:text="@string/share_get_red_packet"
            android:gravity="center"
            android:background="@drawable/shape_blue_stroke_radio"
            android:layout_height="@dimen/x80"/>

    </LinearLayout>

</LinearLayout>