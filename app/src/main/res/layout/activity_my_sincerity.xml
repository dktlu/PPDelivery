<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        layout="@layout/layout_titlebar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/my_divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/login_blue_1A"
        android:layout_height="@dimen/x360">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_sincerity"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="@string/current_sincerity"
                android:textSize="@dimen/x24"
                android:layout_marginTop="@dimen/x24"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="29"
                android:textSize="@dimen/x90"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/expandlistview"
        android:layout_width="match_parent"
        android:divider="@null"
        android:background="@color/white"
        android:layout_height="match_parent">

    </ExpandableListView>

</LinearLayout>
