<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        layout="@layout/layout_titlebar"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/my_divider"
        android:layout_height="@dimen/x1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/x30"
            android:background="@color/white"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/x34"
            android:paddingBottom="@dimen/x26"
            android:textColor="@color/login_gray_45"
            android:textSize="@dimen/x28"
            android:hint="@string/hint_input_old_pwd"
            android:textColorHint="@color/login_gray_c8"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/my_divider"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_height="@dimen/x1"/>

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/x34"
            android:background="@color/white"
            android:paddingBottom="@dimen/x26"
            android:textColor="@color/login_gray_45"
            android:textSize="@dimen/x28"
            android:hint="@string/hint_new_pwd"
            android:textColorHint="@color/login_gray_c8"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/my_divider"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_height="@dimen/x1"/>

        <EditText
            android:id="@+id/et_sure_new_pwd"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/x34"
            android:background="@color/white"
            android:paddingBottom="@dimen/x26"
            android:textColor="@color/login_gray_45"
            android:textSize="@dimen/x28"
            android:hint="@string/hint_sure_new_pwd"
            android:textColorHint="@color/login_gray_c8"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/my_divider"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_height="@dimen/x1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x24"
        android:textColor="@color/white"
        android:textSize="@dimen/x30"
        android:text="@string/complete_update"
        android:background="@drawable/shape_blue_stroke_white_solid"
        android:layout_height="@dimen/x88"/>
</LinearLayout>
