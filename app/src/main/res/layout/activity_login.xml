<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        layout="@layout/layout_titlebar"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/my_divider"
        android:layout_height="@dimen/x1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x157"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_login_quick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:button="@null"
                android:checked="true"
                android:paddingBottom="@dimen/x10"
                android:background="@drawable/login_divider_white_blue"
                android:textColor="@drawable/login_txt_gray_blue"
                android:text="@string/quick_login"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_login_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:paddingBottom="@dimen/x10"
                android:button="@null"
                android:background="@drawable/login_divider_white_blue"
                android:textColor="@drawable/login_txt_gray_blue"
                android:text="@string/quick_login"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_quick"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x180"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x75"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/x70"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@mipmap/ic_login_phone"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:lines="1"
                android:paddingLeft="@dimen/x36"
                android:paddingRight="@dimen/x36"
                android:textSize="@dimen/x28"
                android:textColor="@color/login_gray_45"
                android:hint="@string/hint_input_phone"
                android:textColorHint="@color/login_gray_c8"
                android:maxLines="1"
                android:layout_height="wrap_content"/>
            
            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:text="@string/get_code"
                android:textSize="@dimen/x28"
                android:textColor="@color/login_blue_1A"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x71"
            android:layout_marginRight="@dimen/x69"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x18"
            android:background="@color/my_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x75"
            android:layout_marginTop="@dimen/x80"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/x70"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_login_code"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@mipmap/ic_login_code"/>

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:lines="1"
                android:paddingLeft="@dimen/x36"
                android:paddingRight="@dimen/x36"
                android:textSize="@dimen/x28"
                android:textColor="@color/login_gray_45"
                android:hint="@string/hint_input_code"
                android:textColorHint="@color/login_gray_c8"
                android:maxLines="1"
                android:inputType="textPassword"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/cb_pwd_show"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:button="@drawable/selector_login_pwd_show"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x71"
            android:layout_marginRight="@dimen/x69"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x18"
            android:background="@color/my_divider"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginRight="@dimen/x70"
        android:layout_marginTop="@dimen/x100"
        android:padding="@dimen/x30"
        android:gravity="center"
        android:background="@drawable/btn_login_gray_blue"
        android:textColor="@color/white"
        android:textSize="@dimen/x30"
        android:text="@string/login"/>

</LinearLayout>
