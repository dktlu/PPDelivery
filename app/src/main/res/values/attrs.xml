<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="border_width" format="dimension"/>
    <attr name="border_color" format="color"/>
    <!-- 作用同系统的 fitsSystemWindows -->
    <attr name="fitsSystemWindows" format="boolean"/>

    <declare-styleable name="CircleImageView">
        <attr name="border_width"/>
        <attr name="border_color"/>
    </declare-styleable>
    <declare-styleable name="AutoFlowLayout">
        <attr name="singleLine" format="boolean"></attr>
        <attr name="maxLines" format="integer"></attr>
        <attr name="multiChecked" format="boolean"></attr>
        <attr name="horizontalSpace" format="dimension"></attr>
        <attr name="verticalSpace" format="dimension"></attr>
        <attr name="columnNumbers" format="integer"></attr>
        <attr name="rowNumbers" format="integer"></attr>
        <attr name="cutLineWidth" format="dimension"></attr>
        <attr name="cutLineColor" format="color"></attr>
        <attr name="cutLine" format="boolean"></attr>
        <attr name="lineCenter" format="boolean"></attr>
    </declare-styleable>
    <declare-styleable name="NinePhotoView">
        <attr name="ninephoto_hspace" format="dimension"/>
        <attr name="ninephoto_vspace" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PswInputView">
        <attr name="count" format="integer"/>
        <attr name="border_color"/>
        <attr name="dot_color" format="color"/>
        <attr name="hspace" format="dimension"/>
        <attr name="border_size" format="dimension"/>
    </declare-styleable>

    <!--星星评分-->
    <declare-styleable name="RatingBar">
        <!--星星间距-->
        <attr format="dimension" name="starDistance"/>
        <!--星星大小-->
        <attr format="dimension" name="starSize"/>
        <!--星星个数-->
        <attr format="integer" name="starCount"/>
        <!--星星空图-->
        <attr format="reference" name="starEmpty"/>
        <!--星星满图-->
        <attr format="reference" name="starFill"/>
    </declare-styleable>
</resources>