<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="fitsSystemWindows">false</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!--宽高自适应-->
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="mw_margin_left_right_30" parent="match_wrap">
        <item name="android:layout_marginLeft">@dimen/x30</item>
        <item name="android:layout_marginRight">@dimen/x30</item>
    </style>

    <!--分割线-->
    <style name="divider_height_1" parent="match_match">
        <item name="android:layout_height">@dimen/x1</item>
        <item name="android:background">@color/my_divider</item>
    </style>

    <!--分割线-->
    <style name="divider_height_1_marginLeft_30" parent="divider_height_1">
        <item name="android:layout_marginLeft">@dimen/x30</item>
    </style>

    <style name="LinearLayout_mw_horizontal_bg_white" parent="match_wrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="LinearLayout_mw_vertical_bg_white" parent="match_wrap">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ll_hor_gravity_center_vert" parent="LinearLayout_mw_horizontal_bg_white">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ll_hor_gravity_center_vert_margin_left_right_30" parent="LinearLayout_mw_horizontal_bg_white">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/x30</item>
        <item name="android:layout_marginRight">@dimen/x30</item>
    </style>

    <style name="ww_txt_color_white" parent="wrap_wrap">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ww_color_gray45" parent="wrap_wrap">
        <item name="android:textColor">@color/login_gray_45</item>
    </style>

    <style name="ww_color_gray45_size_24" parent="ww_color_gray45">
        <item name="android:textSize">@dimen/x24</item>
    </style>
    
    <style name="ww_color_white_size_30" parent="wrap_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x30</item>
    </style>

    <style name="ww_txt_color_white_size_24" parent="ww_txt_color_white">
        <item name="android:textSize">@dimen/x24</item>
    </style>

    <style name="ww_txt_color_gray45_size_28" parent="wrap_wrap">
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:textColor">@color/login_gray_45</item>
    </style>

    <style name="ww_txt_color_gray45_size_30" parent="wrap_wrap">
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:textColor">@color/login_gray_45</item>
    </style>

    <style name="ww_txt_color_gray45_size_26" parent="wrap_wrap">
        <item name="android:textSize">@dimen/x26</item>
        <item name="android:textColor">@color/login_gray_45</item>
    </style>

    <style name="ww_txt_color_gray45_size_28_gravity_right" parent="ww_txt_color_gray45_size_28">
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:textColor">@color/login_gray_45</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
</resources>
